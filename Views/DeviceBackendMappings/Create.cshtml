@model DeviceManagementWebsite.Models.DeviceBackendDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add Device Backend Mapping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Device</label>
                @*<select asp-for="DeviceId" asp-items="@(new SelectList(ViewBag.devices,"Id","Imei"))"  class="form-control"></select>*@
                @Html.DropDownListFor(m => m.DeviceId,
           new SelectList(ViewBag.devices, "Id", "Imei"),
           "Select", new { @class = "form-control" })
                <span asp-validation-for="DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Backend </label>
                @*<select asp-for="BackendId" asp-items="@(new SelectList(ViewBag.backends,"Id","Name"))" class="form-control"></select>*@
                @*<input asp-for="BackendId" class="form-control" />*@
                @Html.DropDownListFor(m => m.BackendId,
            new SelectList(ViewBag.backends, "Id", "Name"),
            "Select", new { @class = "form-control" })
                <span asp-validation-for="BackendId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (ViewBag.RetVal == 1)
                {
                    <span class="text-success">Saved successfully</span>
                }
                else if (ViewBag.RetVal == -1)
                {
                    <span class="text-danger">Error occured!</span>
                }
                else if (ViewBag.RetVal == -2)
                {
                    <span class="text-danger">This mapping already exits!</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
